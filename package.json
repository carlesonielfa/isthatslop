{
  "name": "isthatslop",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "compose:up": "docker compose -f tools/docker-isthatslop-local/compose.yml up -d",
    "compose:down": "docker compose -f tools/docker-isthatslop-local/compose.yml down",
    "db:generate": "bun -F @repo/database db:generate",
    "db:migrate": "bun -F @repo/database db:migrate",
    "db:seed": "bun -F @repo/database db:seed",
    "db:triggers": "bun -F @repo/database db:triggers",
    "db:seed-scoring": "bun -F @repo/database db:seed-scoring",
    "db:tune-thresholds": "bun -F @repo/database db:tune-thresholds",
    "git:redate": "git stash --include-untracked && NOW=$(date -Iseconds) && FILTER_BRANCH_SQUELCH_WARNING=1 git filter-branch -f --env-filter 'export GIT_AUTHOR_DATE=$NOW GIT_COMMITTER_DATE=$NOW' origin/main..HEAD && git stash pop"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "typescript": "5.9.2",
    "vite-tsconfig-paths": "^6.0.5",
    "vitest": "^4.0.18",
    "web": "workspace:*"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
